<Window x:Class="BD_Kursach_WPF.NameDescDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD_Kursach_WPF"
        mc:Ignorable="d"
        Title="NameDescDialog" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock FontWeight="Bold" Text="Название:"/>
            <TextBox Name="tb_name"/>
            <TextBlock FontWeight="Bold" Text="Описание:"/>
            <TextBox Name="tb_desc" TextWrapping="Wrap"/>
            <WrapPanel>
                <Button Name="btn_accept" Content="Добавить" Click="btn_accept_Click"/>
                <Button Name="btn_cancel" Content="Отмена" Click="btn_cancel_Click"  Margin="10 0 0 0"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
